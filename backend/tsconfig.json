{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "lib": ["es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
